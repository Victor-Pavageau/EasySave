<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="369" Width="620">
    <Grid Margin="0,0,0,-6">
        <ProgressBar Value="{Binding Path=Progress}" HorizontalAlignment="Left" Height="38" VerticalAlignment="Center" Width="376" Margin="64,0,0,0"/>
        <Button Name="PauseButton" Content="Pause" HorizontalAlignment="Left" Margin="469,189,0,0" VerticalAlignment="Top" Click="PauseButton_Click"/>
        <Button Name="PlayButton" Content="Play" HorizontalAlignment="Left" Margin="474,151,0,0" VerticalAlignment="Top" Click="PlayButton_Click"/>
        <Button Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" Margin="232,264,0,0" VerticalAlignment="Top" Height="44" Width="128" Click="ConnectButton_Click"/>

    </Grid>
</Window>
